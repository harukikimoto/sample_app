<% if @error_message %>
        <div class="form-error alert alert-danger">
            <%= @error_message %>
        </div>
        <% end %>

        <div class="wrapper mt-wrapper">
        <%= form_tag("/login") do %>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">メールアドレス</label>
            <input  name="email" value="<%= @email %>"  class="form-control" >
        </div>
        <div class="mb-3">
            <label  class="form-label">パスワード</label>
            <input  type="password" name="password" value="<%= @password %>" class="form-control" >
        </div>
        <input type="submit" class="btn btn-primary btn-lg" value="ログイン">
        <% end %>
    </div>

